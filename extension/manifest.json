{
  "manifest_version": 2,
  "name": "TruthFool",
  "description":"Chrome extension for equal and balanced news",
  "version": "0.2.1",
  "background": {
    "scripts": ["jquery.min.js", "semantic.js", "background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.facebook.com/*",
        "*://facebook.com/*"
      ],      
      "css": ["styles.css"],
      "js": ["jquery.min.js", "semantic.js", "script.js", "prototype.js"]
    }
  ],
  "icons": { 
    "64": "icons/256.png",
    "128": "icons/128.png",
    "256": "icons/256.png",
    "512": "icons/512.png",
    "1024": "icons/1024.png"
  }
}